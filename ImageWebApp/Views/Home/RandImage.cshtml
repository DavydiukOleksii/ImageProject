
@{
    ViewBag.Title = "RandImage";
}

<div>
    <div class="col-lg-12 text-center">
        <h2>Random images</h2>
    </div>
    <div class="col-lg-10 col-md-offset-1 oneImage">
        @{
            var imgsrc = "";
            var base64 = Convert.ToBase64String(Model.Photo);
            imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

            <div class="image" id="@Model.ImageId" title="@Model.Description">
                <img src="@imgsrc" alt="" class="img-rounded" />
            </div>
        }

    </div>
</div>
