@{
    ViewBag.Title = "AllImage";
}

<div class="gallery">
    <div class="col-lg-12 text-center">
        <h2>All Images</h2>
    </div>

    @foreach (var element in Model)
    {
        var imgsrc = "";
        var base64 = Convert.ToBase64String(element.Photo);
        imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

        <a class="fancybox" id="@element.ImageId" rel="gallery" href="@imgsrc" title="@element.Description">
            <img src="@imgsrc" alt="" class="img-rounded"/>
        </a>
    }
</div>



